{
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["ENV VERSION (?<currentValue>.*?) # renovate: depName=(?<depName>.*?)\\n"],
      "versioningTemplate": "regex:^(?<major>\\d+)(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))?(.(?<compatibility>.*))?$",
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
        {
            "packageNames": ["pritunl/pritunl"],
            "updateTypes": ["minor", "major", "patch"],
            "enabled": true
        }
  ]
}
